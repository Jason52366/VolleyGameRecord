<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:id="@+id/listView_gamestart2Player"
        android:divider="#D3D3D3"
        android:dividerHeight="2dp"
        android:cacheColorHint="#00000000"
        android:minHeight="50dp"
        android:textFilterEnabled="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:choiceMode="none"
        android:clickable="false"
        android:drawSelectorOnTop="false"
        android:focusable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上場球員"
        android:id="@+id/textView_gamestart2Player"
        android:textSize="48dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確  定"
        android:id="@+id/button_gamestart2Sure"
        android:layout_below="@+id/listView_gamestart2Player"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="背號"
        android:id="@+id/textView"
        android:layout_above="@+id/listView_gamestart2Player"
        android:layout_alignLeft="@+id/listView_gamestart2Player"
        android:layout_alignStart="@+id/listView_gamestart2Player"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="球員"
        android:id="@+id/textView2"
        android:layout_above="@+id/listView_gamestart2Player"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="位置"
        android:id="@+id/textView3"
        android:layout_above="@+id/listView_gamestart2Player"
        android:layout_alignRight="@+id/listView_gamestart2Player"
        android:layout_alignEnd="@+id/listView_gamestart2Player"
        android:textSize="30dp" />

</RelativeLayout>