<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="球員"
        android:id="@+id/textView_record2player"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginTop="5dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player4"
        android:id="@+id/radiobotton_record2player4"
        android:checked="false"
        android:textSize="25dp"
        android:layout_below="@+id/textView_record2player"
        android:layout_toLeftOf="@+id/radiobotton_record2player3"
        android:layout_marginTop="8dp" />
        android:textSize="25dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player3"
        android:id="@+id/radiobotton_record2player3"
        android:checked="false"
        android:textSize="25dp"
        android:layout_below="@+id/textView_record2player"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player2"
        android:id="@+id/radiobotton_record2player2"
        android:checked="false"
        android:textSize="25dp"
        android:layout_alignTop="@+id/radiobotton_record2player3"
        android:layout_toRightOf="@+id/radiobotton_record2player3"
        android:layout_marginLeft="5dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player6"
        android:checked="false"
        android:id="@+id/radiobotton_record2player6"
        android:textSize="25dp"
        android:layout_below="@+id/radiobotton_record2player3"
        android:layout_alignLeft="@+id/radiobotton_record2player3"
        android:layout_alignStart="@+id/radiobotton_record2player3" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player5"
        android:id="@+id/radiobotton_record2player5"
        android:checked="false"
        android:textSize="25dp"
        android:layout_below="@+id/radiobotton_record2player4"
        android:layout_alignLeft="@+id/radiobotton_record2player4"
        android:layout_alignStart="@+id/radiobotton_record2player4" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player1"
        android:id="@+id/radiobotton_record2player1"
        android:checked="false"
        android:textSize="25dp"
        android:layout_below="@+id/radiobotton_record2player2"
        android:layout_alignLeft="@+id/radiobotton_record2player2"
        android:layout_alignStart="@+id/radiobotton_record2player2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="得分方式"
        android:id="@+id/textView_record2ways"
        android:layout_below="@+id/radiobotton_record2player6"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:minHeight="30dp"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快球"
        android:id="@+id/radioButton_record2b1"
        android:checked="false"
        android:textSize="25dp"
        android:layout_below="@+id/textView_record2ways"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修正"
        android:id="@+id/radioButton_record2b2"
        android:layout_below="@+id/radioButton_record2b1"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:textSize="25dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大砲"
        android:id="@+id/radioButton_record2a1"
        android:layout_alignTop="@+id/radioButton_record2b1"
        android:layout_toLeftOf="@+id/radioButton_record2b1"
        android:checked="false"
        android:textSize="25dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快攻"
        android:id="@+id/radioButton_record2a2"
        android:layout_below="@+id/radioButton_record2a1"
        android:layout_alignRight="@+id/radioButton_record2a1"
        android:layout_alignEnd="@+id/radioButton_record2a1"
        android:checked="false"
        android:textSize="25dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="背位"
        android:id="@+id/radioButton_record2b3"
        android:layout_below="@+id/radioButton_record2b2"
        android:layout_alignLeft="@+id/radioButton_record2a2"
        android:layout_alignStart="@+id/radioButton_record2a2"
        android:checked="false"
        android:textSize="25dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="後排"
        android:id="@+id/radioButton_record2a4"
        android:layout_below="@+id/radioButton_record2b3"
        android:layout_alignLeft="@+id/radioButton_record2b3"
        android:layout_alignStart="@+id/radioButton_record2b3"
        android:checked="false"
        android:textSize="25dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直線"
        android:id="@+id/radioButton_record2c1"
        android:layout_alignTop="@+id/radioButton_record2b1"
        android:layout_toRightOf="@+id/radioButton_record2b1"
        android:checked="false"
        android:textSize="25dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="斜線"
        android:id="@+id/radioButton_record2c2"
        android:checked="false"
        android:textSize="25dp"
        android:layout_below="@+id/radioButton_record2c1"
        android:layout_toRightOf="@+id/radioButton_record2b2" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手尾"
        android:id="@+id/radioButton_record2c3"
        android:layout_below="@+id/radioButton_record2c2"
        android:layout_toRightOf="@+id/radioButton_record2b2"
        android:checked="false"
        android:textSize="25dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="吊球"
        android:id="@+id/radioButton_record2c4"
        android:layout_below="@+id/radioButton_record2c3"
        android:layout_alignLeft="@+id/radioButton_record2c3"
        android:layout_alignStart="@+id/radioButton_record2c3"
        android:checked="false"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他"
        android:id="@+id/textView_record2others"
        android:textSize="30dp"
        android:layout_below="@+id/radioButton_record2c4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="發球得分"
        android:id="@+id/radioButton_record2other2"
        android:checked="false"
        android:layout_below="@+id/textView_record2others"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="8dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="對手失誤"
        android:id="@+id/radioButton_record2other1"
        android:checked="false"
        android:layout_alignTop="@+id/radioButton_record2other2"
        android:layout_toLeftOf="@+id/textView_record2others"
        android:layout_marginRight="25dp"
        android:textSize="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="攔網得分"
        android:id="@+id/radioButton_record2otherˇ"
        android:layout_alignTop="@+id/radioButton_record2other2"
        android:layout_toRightOf="@+id/radioButton_record2other2"
        android:checked="false"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確定"
        android:id="@+id/button_record2confirm"
        android:textSize="30dp"
        android:layout_below="@+id/radioButton_record2other2"
        android:layout_alignLeft="@+id/radioButton_record2b2"
        android:layout_alignStart="@+id/radioButton_record2b2"
        android:layout_marginTop="20dp" />

</RelativeLayout>