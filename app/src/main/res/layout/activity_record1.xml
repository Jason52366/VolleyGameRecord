<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:id="@+id/frameLayout"
        android:layout_below="@+id/textView_record1OurTeam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp">

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="得 分"
            android:id="@+id/button_record1GetPoint"
            android:layout_gravity="left|center_vertical"
            android:textSize="40dp"
            android:layout_marginLeft="60dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="失 分"
            android:id="@+id/button_record1LosePoint"
            android:layout_gravity="right|center_vertical"
            android:textSize="40dp"
            android:layout_marginRight="60dp" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的隊伍"
        android:id="@+id/textView_record1OurTeam"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/frameLayout"
        android:layout_alignStart="@+id/frameLayout"
        android:layout_marginTop="20dp"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交手隊伍"
        android:id="@+id/textView_record1RivalTeam"
        android:layout_alignTop="@+id/textView_record1OurTeam"
        android:layout_alignRight="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5566"
        android:id="@+id/textView_record1OurScore"
        android:textSize="42dp"
        android:layout_below="@+id/textView_record1OurTeam"
        android:layout_alignRight="@+id/textView_record1OurTeam"
        android:layout_alignEnd="@+id/textView_record1OurTeam" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5566"
        android:id="@+id/textView_record1RivalScore"
        android:textSize="42dp"
        android:layout_below="@+id/textView_record1RivalTeam"
        android:layout_alignLeft="@+id/textView_record1RivalTeam"
        android:layout_alignStart="@+id/textView_record1RivalTeam" />

</RelativeLayout>