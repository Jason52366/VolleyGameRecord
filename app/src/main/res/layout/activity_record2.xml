<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player4"
        android:id="@+id/radioButton_record2sit4"
        android:checked="false"
        android:textSize="20dp"
        android:layout_below="@+id/textView_record2player"
        android:layout_toLeftOf="@+id/radioButton_record2sit3" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player3"
        android:id="@+id/radioButton_record2sit3"
        android:checked="false"
        android:textSize="20dp"
        android:layout_above="@+id/radioButton_record2sit6"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player2"
        android:id="@+id/radioButton_record2sit2"
        android:checked="false"
        android:textSize="20dp"
        android:layout_alignTop="@+id/radioButton_record2sit3"
        android:layout_toRightOf="@+id/radioButton_record2sit3" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player5"
        android:id="@+id/radioButton_record2sit5"
        android:layout_below="@+id/radioButton_record2sit4"
        android:layout_alignLeft="@+id/radioButton_record2sit4"
        android:layout_alignStart="@+id/radioButton_record2sit4"
        android:checked="false"
        android:textSize="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player6"
        android:id="@+id/radioButton_record2sit6"
        android:checked="false"
        android:textSize="20dp"
        android:layout_below="@+id/radioButton_record2sit4"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player1"
        android:id="@+id/radioButton_record2sit1"
        android:checked="false"
        android:textSize="20dp"
        android:layout_below="@+id/radioButton_record2sit2"
        android:layout_toRightOf="@+id/radioButton_record2sit6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="戰術"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:layout_below="@+id/radioButton_record2sit5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大砲"
        android:id="@+id/radioButton_record2a1"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_marginTop="10dp"
        android:textSize="26dp"
        android:layout_marginLeft="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快攻"
        android:id="@+id/radioButton_record2a2"
        android:layout_below="@+id/radioButton_record2a1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textSize="26dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="背位"
        android:id="@+id/radioButton_record2a3"
        android:layout_below="@+id/radioButton_record2a2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_marginTop="3dp"
        android:textSize="26dp"
        android:layout_marginLeft="20dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="後排"
        android:id="@+id/radioButton_record2a4"
        android:layout_below="@+id/radioButton_record2a3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:textSize="26dp"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="球員"
        android:id="@+id/textView_record2player"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好球"
        android:id="@+id/radioButton_record2b1"
        android:layout_alignTop="@+id/radioButton_record2a1"
        android:layout_toRightOf="@+id/radioButton_record2a1"
        android:checked="false"
        android:textSize="26dp"
        android:layout_marginLeft="15dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修正"
        android:id="@+id/radioButton_record2b2"
        android:layout_alignTop="@+id/radioButton_record2a2"
        android:layout_alignLeft="@+id/radioButton_record2b1"
        android:layout_alignStart="@+id/radioButton_record2b1"
        android:checked="false"
        android:textSize="26dp"
        android:layout_marginTop="3dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直線"
        android:id="@+id/radioButton_record2c1"
        android:layout_alignTop="@+id/radioButton_record2b1"
        android:layout_toRightOf="@+id/radioButton_record2b1"
        android:layout_marginLeft="15dp"
        android:checked="false"
        android:textSize="26dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="斜線"
        android:id="@+id/radioButton_record2c2"
        android:layout_alignTop="@+id/radioButton_record2b2"
        android:layout_alignLeft="@+id/radioButton_record2c1"
        android:layout_alignStart="@+id/radioButton_record2c1"
        android:checked="false"
        android:textSize="26dp"
        android:layout_marginTop="3dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="吊球"
        android:id="@+id/radioButton_record2c3"
        android:checked="false"
        android:textSize="26dp"
        android:layout_below="@+id/radioButton_record2b2"
        android:layout_toRightOf="@+id/radioButton_record2sit6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確定"
        android:id="@+id/btn_record2Confirm"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/radioButton_record2sit5"
        android:textSize="26dp" />

</RelativeLayout>